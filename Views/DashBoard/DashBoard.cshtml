@model EEAffiliate.Models.DashBoardModel
@{
    ViewBag.Title = "DashBoard";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-3 col-sm-6">
                <div class="card">
                    <div class="content">
                        <div class="row">
                            <div class="col-xs-5">
                                <div class="icon-big icon-warning text-center">
                                    <i class="fa fa-eye"></i>
                                </div>
                            </div>
                            <div class="col-xs-7">
                                <div class="numbers">
                                    <p>Traffic</p>
                                    @Model.Traffic
                                </div>
                            </div>
                        </div>
                        <div class="footer">
                            <!-- <hr /> -->
                            <!-- <div class="stats"> -->
                            <!-- <i class="ti-reload"></i> Updated now -->
                            <!-- </div> -->
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6">
                <div class="card">
                    <div class="content">
                        <div class="row">
                            <div class="col-xs-5">
                                <div class="icon-big icon-success text-center">
                                    <i class="fa fa-line-chart"></i>
                                </div>
                            </div>
                            <div class="col-xs-7">
                                <div class="numbers">
                                    <p>Sales</p>
                                    @Model.Sales
                                </div>
                            </div>
                        </div>
                        <div class="footer">
                            <!-- <hr /> -->
                            <!-- <div class="stats"> -->
                            <!-- <i class="ti-calendar"></i> Last day -->
                            <!-- </div> -->
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6">
                <div class="card">
                    <div class="content">
                        <div class="row">
                            <div class="col-xs-5">
                                <div class="icon-big icon-danger text-center">
                                    <i class="fa fa-percent"></i>
                                </div>
                            </div>
                            <div class="col-xs-7">
                                <div class="numbers">
                                    <p>Commission</p>
                                    @Model.Commission
                                </div>
                            </div>
                        </div>
                        <div class="footer">
                            <!-- <hr /> -->
                            <!-- <div class="stats"> -->
                            <!-- <i class="ti-timer"></i> In the last hour -->
                            <!-- </div> -->
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6">
                <div class="card">
                    <div class="content">
                        <div class="row">
                            <div class="col-xs-5">
                                <div class="icon-big icon-info text-center">
                                    <i class="fa fa-check-square-o"></i>
                                </div>
                            </div>
                            <div class="col-xs-7">
                                <div class="numbers">
                                    <p>Settled</p>
                                    @Model.Settled
                                </div>
                            </div>
                        </div>
                        <div class="footer">
                            <!-- <hr /> -->
                            <!-- <div class="stats"> -->
                            <!-- <i class="ti-reload"></i> Updated now -->
                            <!-- </div> -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">

                <div class="card ">
                    <div class="header">
                        <h4 class="title">2018 Sales</h4>
                        <p class="category"> </p>
                    </div>
                    <div class="content">
                        <div id="chartActivity" class="ct-chart"></div>
                        <div class="footer">
                            <div class="chart-legend">
                                <i class="fa fa-circle text-info"></i> Conversion Data
                                @*<i class="fa fa-circle text-warning"></i> Leads Data*@
                            </div>
                            <hr>
                            <div class="stats">
                                <i class="ti-check"></i> Data information certified
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- </div> -->
        <div class="row">
            <div class="col-md-6">

            </div>
            <div class="col-md-6">


            </div>
        </div>
    </div>
</div>
<!--  Charts Plugin -->
<script src="~/Content/js/chartist.min.js"></script>
<script src="~/Content/js/jquery-1.10.2.js" type="text/javascript"></script>

<script type="text/javascript">
   $(document).ready(function ()
    {
       
       var LeadsData = @Html.Raw(Json.Encode(Model.LeadsData));
       var ConversionData = @Html.Raw(Json.Encode(Model.ConversionData));
       var LabelData=@Html.Raw(Json.Encode(Model.LabelData));
       
       var data = {
           labels: LabelData,
           //labels:['jan','Feb','Mar','Apr','May'],
                series: [ConversionData]
            };

            var options = {
                seriesBarDistance: 10,
                axisX: {
                    showGrid: false
                },
                height: "245px"
            };

            var responsiveOptions = [
                ['screen and (max-width: 640px)', {
                    seriesBarDistance: 5,
                    axisX: {
                        labelInterpolationFnc: function (value) {
                            return value[0];
                        }
                    }
                }]
            ];

            Chartist.Line('#chartActivity', data, options, responsiveOptions);

    });


</script>

