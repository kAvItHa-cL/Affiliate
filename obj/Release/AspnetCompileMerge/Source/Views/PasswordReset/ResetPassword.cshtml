


@{
    ViewBag.Title = "Login";
    Layout = null;
}
<html>
<head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="~/Content/img/apple-icon.png">
    <link rel="icon" type="image/png" sizes="96x96" href="~/Content/img/favicon.ico">
    <!-- Bootstrap core CSS     -->
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/paper-dashboard.css" rel="stylesheet" />


</head>
<body class="bg" style="background-image:url(../Content/img/signin.jpg);">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4 col-sm-12">
                <div id="login">
                    <div class="text-center"><img src="~/Content/img/logo.png" alt="Image" data-retina="true" width="70" height="70"></div>
                    <hr>
                    <!--  <form>
                      <div class="row">
                          <div class="col-md-6 col-sm-6 login_social">
                              <a href="#" class="btn btn-primary btn-block"><i class="icon-facebook"></i> Facebook</a>
                          </div>
                          <div class="col-md-6 col-sm-6 login_social">
                              <a href="#" class="btn btn-info btn-block "><i class="icon-google"></i>Google+</a>
                          </div>
                      </div>
                      <div class="login-or"><hr class="hr-or"><span class="span-or">or</span></div>
                    end row -->

                    @if (ViewBag.Message != null)
                    {
                        <div class="form-group">
                            <label style="color:forestgreen; font-size:20px;font-weight:600">@ViewBag.Message</label>
                        </div>
                    }

                    <div class="form-group">
                        <label id="invalidInput"></label>
                    </div>

                    <form method="post" name="loginForm">



                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" id="Password" class=" form-control" placeholder="Password" name="Password" style="border: 1px solid #ccc;background-color:white;">
                        </div>

                        <div class="form-group">
                            <label>Confirm Password</label>
                            <input type="password" id="ConfirmPassword" class=" form-control" placeholder="ConfirmPassword" name="ConfirmPassword" style="border: 1px solid #ccc;background-color:white;">
                        </div>
                        <div class="form-group">
                            <input type="hidden" id="code" name="code" value="@ViewBag.ActivationCode">
                        </div>
                        <center> <input type="submit" value="Reset Password" class="btn btn-info btn-fill btn-wd" style="background-color:#ed1c24;border:none;" /></center>
                    </form>
                </div>

            </div>
        </div>
    </div>
    <script src="http://code.jquery.com/jquery-1.9.1.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js"></script>
    <script>
        $('form').submit(function () {
            var Password = $.trim($('#Password').val());
            var ConfirmPassword = $.trim($('#ConfirmPassword').val());
            if (Password == '' || ConfirmPassword == '') {
                $("#invalidInput").text("Please fill the fields").css("color", "red");
                return false;
            } 
            if (Password != ConfirmPassword) {
               
              $("#invalidInput").text("Password mismatch").css("color", "red");
                return false;
            }
            return true;

        });
    </script>
</body>
</html>
