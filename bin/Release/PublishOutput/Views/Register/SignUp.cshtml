                        end row -->

                        <div class="form-group">
                            <label style="color:red;display:none;" id="invalidInput">Invalid inputs, Please try again!</label>
                        </div>
                        <div class="form-group">
                            <label style="color:red;display:none;" id="mismatch">Password mismatch, Please try again!</label>
                        </div>

                        <div class="form-group">
                            <label>Fullname</label>
                            <input type="text" class=" form-control" id="FullName" name="Fullname" placeholder="Fullname" style="border: 1px solid #ccc;background-color:white;">
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <input type="email" class=" form-control" id="EmailId" name="EmailId" placeholder="Email" style="border: 1px solid #ccc;background-color:white;">
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" class=" form-control" id="Password" name="Password" placeholder="Password" style="border: 1px solid #ccc;background-color:white;">
                        </div>
                        <div class="form-group">
                            <label>Confirm password</label>
                            <input type="password" class=" form-control" id="ConfirmPassword" name="ConfirmPassword" placeholder="Confirm password" style="border: 1px solid #ccc;background-color:white;">
                        </div>
                        <div id="pass-info" class="clearfix"></div>
                        @* @Html.ActionLink("Register", "Register", "Register", null, new { @class = "btn_full" })*@
                        <center>
                            <input type="submit" id="Submit" class="btn btn-info btn-fill btn-wd" value="Sign Up" onclick="return validateRegister()" style="background-color:#ed1c24;border:none;" />
                            <br /><br /> <p class="sm-p">
                                already registered..?
                                @Html.ActionLink("Sign In", "SignIn", "Login", null, new { @class = "btn_full_outline" })
                            </p>
                        </center>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
<script>
$(document).ready(function () {
       $("#Submit").click(function () {
           $.ajax({
               url: "/Register/SignUp",
               type: "POST",
               data: {

                   FullName: $("#FullName").val(),
                   EmailId: $("#EmailId").val(),
                   Password: $("#Password").val(),
                   ConfirmPassword: $("#ConfirmPassword").val(),

               },
               dataType: "'application/json",
               success: successFunc,
               error: errorFunc,
           });
           function successFunc(data, status) {
               alert("ready to submit");
           }

           function errorFunc() {
               alert('Error');
           }

       });
   });


</script>